<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:viz.data="sap.viz.ui5.data" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout" xmlns:chart="sap.suite.ui.commons" controllerName="corona.corona.controller.coronaView0" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<!--<Panel expandable="true" expanded="false" headerText="Click To See Total Cases/Deaths" width="auto" class="sapUiResponsiveMargin">-->
					<!--<content>-->
					<!--</content>-->
					<!--</Panel>-->
					<content>
						<VBox width="100%" id="vbox0" alignItems="Start" alignContent="SpaceBetween" direction="Column" renderType="List">
							<items>
								<Text xmlns="sap.m" text="Total Cases: {/sum1}" id="text1" textAlign="Center"/>
								<Text xmlns="sap.m" text="Total Deaths: {/sum2}" id="text2" textAlign="Center"/>
							</items>
						</VBox>
						<Button xmlns="sap.m" text="Show All Data Of Report" id="button0" activeIcon="sap-icon://activities" press="onPress" busyIndicatorSize="Large" icon="sap-icon://activities" textDirection="RTL" iconFirst="false"/>
						<viz:VizFrame id="idVizFrame" height="100%" width="100%" vizType="donut">
							<viz:dataset>
								<viz.data:FlattenedDataset data="{/items}">
									<viz.data:dimensions>
										<viz.data:DimensionDefinition name="Country" value="{country}"/>
									</viz.data:dimensions>
									<viz.data:measures>
										<viz.data:MeasureDefinition name="Cases" value="{cases}"/>
									</viz.data:measures>
								</viz.data:FlattenedDataset>
							</viz:dataset>
							<viz:feeds>
								<viz.feeds:FeedItem uid="size" type="Measure" values="Cases"/>
								<viz.feeds:FeedItem uid="color" type="Dimension" values="Country"/>
							</viz:feeds>
						</viz:VizFrame>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>